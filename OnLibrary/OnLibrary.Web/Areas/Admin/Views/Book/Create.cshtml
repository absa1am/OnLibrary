@model CreateBookModel

@{
    ViewData["Title"] = "Add Book";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <!-- jquery validation -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Add Book</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form id="quickForm" asp-antiforgery="true" asp-area="Admin" asp-controller="Book" asp-action="Create" method="post">
                        <div class="card-body">
                            <partial name="_ResponseSweetAlertPartial" />
                            <div class="form-group">
                                <label asp-for="Title"></label>
                                <input type="text" asp-for="Title" class="form-control" placeholder="Eleanor and Park">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Author"></label>
                                <input type="text" asp-for="Author" class="form-control" placeholder="Rainbow Rowell">
                                <span asp-validation-for="Author" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Publication"></label>
                                <input type="text" asp-for="Publication" class="form-control" placeholder="...">
                                <span asp-validation-for="Publication" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Genre"></label>
                                <input type="text" asp-for="Genre" class="form-control" placeholder="Enter book genre">
                                <span asp-validation-for="Genre" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-secondary">Add Book</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-6">
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
