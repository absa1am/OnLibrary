@model CreateAuthorModel

@{
    ViewData["Title"] = "Add Author";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <!-- jquery validation -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Add Author</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form id="quickForm" asp-antiforgery="true" asp-area="Admin" asp-controller="Author" asp-action="Create" method="post">
                        <div class="card-body">
                            <partial name="_ResponseSweetAlertPartial" />
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input type="text" name="name" class="form-control" placeholder="Enter author name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input type="email" name="email" class="form-control" placeholder="Enter email address">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <input type="text" name="address" class="form-control" placeholder="Enter contact address">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-secondary">Add Author</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-6">
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
