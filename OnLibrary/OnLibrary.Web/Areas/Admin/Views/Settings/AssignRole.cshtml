@model AssignRoleModel

@{
    ViewData["Title"] = "Assign Role";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <!-- jquery validation -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Assign Role</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form id="quickForm" asp-antiforgery="true" asp-area="Admin" asp-controller="Settings" asp-action="AssignRole" method="post">
                        <div class="card-body">
                            <partial name="_ResponseSweetAlertPartial" />
                            <div class="form-group">
                                <label asp-for="UserName"></label>
                                <select asp-items="@Model.Users" asp-for="UserName" class="form-control"></select>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="RoleName"></label>
                                <select asp-items="@Model.Roles" asp-for="RoleName" class="form-control"></select>
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-secondary">Assign Role</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-6">
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
